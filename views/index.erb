<% if error.to_s != '' %>
  <div class="col-xs-12 col-md-offset-3 col-md-6">
  <div class="alert alert-danger" role="alert"> 
    <strong>Oops!</strong> <%= error %> </div>
  </div>
<% end  %>

<form method="post" action="/rsvp">
  <div class="form-group col-xs-12 col-md-offset-3 col-md-6">
    <label>Enter your invite code:</label>
    <input name="invitecode" id="invitecode" type="textbox" class="form-control" />
    <small>(Your invite code should be 5 letters.)</small>
  </div>
  <div class="form-group col-xs-12 col-md-offset-3 col-md-6 text-right">
    <button type="submit" class="btn btn-primary">RSVP</button>
  </div>
</form>
